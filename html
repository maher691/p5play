// Setup de base avec p5.js
let bird;
let pipes = [];
let gravity = 0.6;
let lift = -15;

function setup() {
  createCanvas(400, 600);
  bird = new Bird();
  pipes.push(new Pipe());
}

function draw() {
  background(135, 206, 250); // Couleur de fond bleu ciel

  // Affichage et mise Ã  jour de l'oiseau
  bird.update();
  bird.show();

  // Gestion des tuyaux
  for (let i = pipes.length - 1; i >= 0; i--) {
    pipes[i].show();
    pipes[i].update();

    // DÃ©tection de collision
    if (pipes[i].hits(bird)) {
      console.log("Collision!");
      noLoop(); // ArrÃªte le jeu
    }

    // Supprimer les tuyaux hors Ã©cran
    if (pipes[i].offscreen()) {
      pipes.splice(i, 1);
    }
  }

  // Ajout de nouveaux tuyaux
  if (frameCount % 75 == 0) {
    pipes.push(new Pipe());
  }
}

function keyPressed() {
  if (key == ' ') {
    bird.up();
  }
}

// Classe pour l'oiseau
class Bird {
  constructor() {
    this.y = height / 2;
    this.x = 64;

    this.gravity = gravity;
    this.lift = lift;
    this.velocity = 0;
  }

  up() {
    this.velocity += this.lift;
  }

  update() {
    this.velocity += this.gravity;
    this.velocity *= 0.9; // Ajout de frottement
    this.y += this.velocity;

    if (this.y > height) {
      this.y = height;
      this.velocity = 0;
    }

    if (this.y < 0) {
      this.y = 0;
      this.velocity = 0;
    }
  }

  show() {
    fill(255, 255, 0); // Jaune pour l'oiseau
    ellipse(this.x, this.y, 32, 32);
  }
